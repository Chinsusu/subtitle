Dialogue: 0,0:00:00.00,0:00:08.00,Default,,0,0,0,,{\c&H00ffff&}Xóm Anh Ngữ{\c} biên dịch\N{\i1\c&Hff0000&}fb.com/xomanhngu{\c}{\i0}
Dialogue: 0,0:00:52.07,0:00:55.34,Default,,0,0,0,,{\i1}Ngày 17/5/2009{\i0}
Dialogue: 0,0:00:55.34,0:00:57.97,Default,,0,0,0,,{\i1}Nghiên cứu mở rộng về Himiko.{\i0}
Dialogue: 0,0:00:57.98,0:01:02.48,Default,,0,0,0,,{\i1}Theo truyền thuyết, Himiko,\Nnữ hoàng đầu tiên của Nhật Bản{\i0}
Dialogue: 0,0:01:02.48,0:01:04.28,Default,,0,0,0,,{\i1}là một phù thủy quyền năng{\i0}
Dialogue: 0,0:01:04.28,0:01:07.82,Default,,0,0,0,,{\i1}bà dùng ma thuật\Ncai trị vương quốc{\i0}
Dialogue: 0,0:01:07.82,0:01:09.95,Default,,0,0,0,,{\i1}gieo rắc tang tóc và tai ương{\i0}
Dialogue: 0,0:01:09.96,0:01:12.85,Default,,0,0,0,,{\i1}chỉ với một cái vẫy tay.{\i0}
Dialogue: 0,0:01:12.86,0:01:16.26,Default,,0,0,0,,{\i1}Số phận trớ trêu\Nđã ngăn cản bà ta.{\i0}
Dialogue: 0,0:01:16.26,0:01:20.63,Default,,0,0,0,,{\i1}Bà bị chính các tướng lĩnh\Ncủa mình trói lại và lôi đến{\i0}
Dialogue: 0,0:01:20.63,0:01:22.70,Default,,0,0,0,,{\i1}một hòn đảo hoang vu{\i0}
Dialogue: 0,0:01:22.70,0:01:25.80,Default,,0,0,0,,{\i1}giữa vùng Biển Ác Quỷ\Nđầy rẫy nguy hiểm.{\i0}
Dialogue: 0,0:01:25.80,0:01:31.21,Default,,0,0,0,,{\i1}Bà ta bị chôn trong\Nhầm mộ dưới núi.{\i0}
Dialogue: 0,0:01:31.21,0:01:35.95,Default,,0,0,0,,{\i1}Tôi thấy dấu vết trong\Ntấm bản đồ cổ không ai có.{\i0}
Dialogue: 0,0:01:35.95,0:01:37.78,Default,,0,0,0,,{\i1}Bà ta nằm đó{\i0}
Dialogue: 0,0:01:37.78,0:01:39.58,Default,,0,0,0,,{\i1}chờ đợi sự giải thoát.{\i0}
Dialogue: 0,0:01:41.72,0:01:44.99,Default,,0,0,0,,{\i1}Tôi phải đến đó trước.{\i0}
Dialogue: 0,0:01:44.99,0:01:46.82,Default,,0,0,0,,{\i1}Dù có thể đây là điều cuối cùng{\i0}
Dialogue: 0,0:01:46.82,0:01:49.49,Default,,0,0,0,,{\i1}tôi làm trong đời{\i0}
Dialogue: 0,0:01:49.49,0:01:52.53,Default,,0,0,0,,{\i1}mà không có Lara.{\i0}
Dialogue: 0,0:01:54.53,0:01:56.00,Default,,0,0,0,,Quyết định đi Lara.
Dialogue: 0,0:01:56.00,0:01:57.54,Default,,0,0,0,,Làm gì đó đi chứ.
Dialogue: 0,0:02:03.34,0:02:04.81,Default,,0,0,0,,Đừng cố chớp thời cơ.
Dialogue: 0,0:02:04.81,0:02:06.48,Default,,0,0,0,,Cô chưa đủ trình.
Dialogue: 0,0:02:06.48,0:02:08.11,Default,,0,0,0,,- Cảm ơn Terry.\N- Không có chi.
Dialogue: 0,0:02:11.22,0:02:12.78,Default,,0,0,0,,Cố lên Lara.
Dialogue: 0,0:02:15.82,0:02:17.66,Default,,0,0,0,,Đừng nhảy nữa, đánh đi.
Dialogue: 0,0:02:19.66,0:02:21.33,Default,,0,0,0,,Có thế chứ!
Dialogue: 0,0:02:24.30,0:02:25.50,Default,,0,0,0,,Đứng lên!
Dialogue: 0,0:02:32.94,0:02:36.14,Default,,0,0,0,,Hay lắm Lara!\NBắt được rồi!
Dialogue: 0,0:02:40.64,0:02:42.38,Default,,0,0,0,,- Thua rồi\N- Chưa đâu!
Dialogue: 0,0:02:42.38,0:02:43.95,Default,,0,0,0,,Vậy kết thúc đi!
Dialogue: 0,0:02:50.82,0:02:52.92,Default,,0,0,0,,Nào Lara! Nhận thua đi.
Dialogue: 0,0:03:12.71,0:03:14.48,Default,,0,0,0,,Đừng nói gì hết.
Dialogue: 0,0:03:14.48,0:03:16.11,Default,,0,0,0,,Cậu thua rồi.
Dialogue: 0,0:03:16.11,0:03:19.35,Default,,0,0,0,,- Không phải thua.\N- Ừ thì không thua.
Dialogue: 0,0:03:19.55,0:03:22.05,Default,,0,0,0,,Mà bị đánh bại.
Dialogue: 0,0:03:22.05,0:03:26.75,Default,,0,0,0,,"Đánh bại"? Cô ta đâu\Nphải siêu anh hùng.
Dialogue: 0,0:03:26.76,0:03:29.49,Default,,0,0,0,,Thực ra tớ để cho...
Dialogue: 0,0:03:29.49,0:03:30.86,Default,,0,0,0,,Không cay cú chứ?
Dialogue: 0,0:03:32.03,0:03:33.23,Default,,0,0,0,,Không đâu.
Dialogue: 0,0:03:36.37,0:03:38.14,Default,,0,0,0,,Rất vui là đằng khác!
Dialogue: 0,0:03:38.14,0:03:39.21,Default,,0,0,0,,Cám ơn nhé.
Dialogue: 0,0:03:43.88,0:03:45.81,Default,,0,0,0,,Lần sau biết tay bà.
Dialogue: 0,0:03:46.21,0:03:48.08,Default,,0,0,0,,Bà sẽ đánh bại mày.
Dialogue: 0,0:03:50.05,0:03:51.48,Default,,0,0,0,,Tối nay cậu về sớm à?
Dialogue: 0,0:03:51.48,0:03:53.45,Default,,0,0,0,,Ừa.
Dialogue: 0,0:03:53.45,0:03:55.25,Default,,0,0,0,,Gặp sau nhé.
Dialogue: 0,0:03:55.25,0:03:56.45,Default,,0,0,0,,Gặp sau.
Dialogue: 0,0:03:56.45,0:03:58.69,Default,,0,0,0,,Đứa nào chôm táo của bố?
Dialogue: 0,0:04:01.49,0:04:04.16,Default,,0,0,0,,Biết ngay là cô mà.
Dialogue: 0,0:04:04.16,0:04:05.99,Default,,0,0,0,,Sao tôi phải làm chuyện đó?
Dialogue: 0,0:04:06.00,0:04:08.33,Default,,0,0,0,,Vì cô không đủ tiền mua.
Dialogue: 0,0:04:08.33,0:04:10.37,Default,,0,0,0,,Cô nợ ngập đầu mà.
Dialogue: 0,0:04:10.37,0:04:12.74,Default,,0,0,0,,Terry, tôi hứa sẽ trả đủ tiền.
Dialogue: 0,0:04:12.74,0:04:14.61,Default,,0,0,0,,Tôi sẽ đền bù cho anh mà.
Dialogue: 0,0:04:16.04,0:04:18.04,Default,,0,0,0,,Kiếm việc đi Lara.
Dialogue: 0,0:04:19.08,0:04:21.81,Default,,0,0,0,,Thế anh nghĩ tôi mặc\Nnhư này cho vui à?
Dialogue: 0,0:04:21.81,0:04:25.15,Default,,0,0,0,,Lara tôi rất thích cô, nhưng...
Dialogue: 0,0:05:03.99,0:05:05.79,Default,,0,0,0,,- Chào.\N- Chào.
Dialogue: 0,0:05:05.79,0:05:08.02,Default,,0,0,0,,- Khỏe chứ?\N- Một ngày tuyệt vời.
Dialogue: 0,0:05:08.03,0:05:09.03,Default,,0,0,0,,Còn cô?
Dialogue: 0,0:05:10.33,0:05:12.16,Default,,0,0,0,,- Ổn cả.\N- Ừ.
Dialogue: 0,0:05:12.16,0:05:15.80,Default,,0,0,0,,Hỏi tiếp đi. Mời con bé\Nđi ăn tối. Mạnh dạn lên.
Dialogue: 0,0:05:16.07,0:05:17.47,Default,,0,0,0,,Hỏi đi.
Dialogue: 0,0:05:17.47,0:05:18.67,Default,,0,0,0,,Gì nữa không?
Dialogue: 0,0:05:20.14,0:05:21.77,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:05:26.88,0:05:29.28,Default,,0,0,0,,Con sao thế?\NSao không hỏi?
Dialogue: 0,0:05:29.28,0:05:30.68,Default,,0,0,0,,Đồ ngốc.
Dialogue: 0,0:05:40.32,0:05:41.86,Default,,0,0,0,,Vụ săn cáo sao rồi Rog?
Dialogue: 0,0:05:41.86,0:05:43.83,Default,,0,0,0,,Sắp xong rồi.
Dialogue: 0,0:05:43.83,0:05:46.86,Default,,0,0,0,,30 thợ săn đã đăng ký.\NGiờ tìm con cáo nữa thôi.
Dialogue: 0,0:05:46.86,0:05:48.83,Default,,0,0,0,,- Khó đấy.\N- Mmm.
Dialogue: 0,0:05:48.83,0:05:50.37,Default,,0,0,0,,Người đó phải lanh lẹ\Nthì mới vui.
Dialogue: 0,0:05:50.37,0:05:52.20,Default,,0,0,0,,Ừ. Chậm rì thì mất vui.
Dialogue: 0,0:05:52.20,0:05:53.97,Default,,0,0,0,,Nhưng phải ngu ngơ và háo thắng.
Dialogue: 0,0:05:53.97,0:05:55.90,Default,,0,0,0,,Các anh bàn vụ gì thế?
Dialogue: 0,0:05:55.91,0:05:58.14,Default,,0,0,0,,Đi săn cáo.
Dialogue: 0,0:05:58.14,0:06:00.01,Default,,0,0,0,,- Vụ gì?\N- Là một cuộc đua.
Dialogue: 0,0:06:00.01,0:06:01.78,Default,,0,0,0,,Có điều con cáo sẽ chạy trước
Dialogue: 0,0:06:01.78,0:06:03.31,Default,,0,0,0,,để lại dấu sơn sau vệt bánh xe
Dialogue: 0,0:06:03.32,0:06:04.88,Default,,0,0,0,,để bầy chó săn đuổi theo.
Dialogue: 0,0:06:04.88,0:06:07.24,Default,,0,0,0,,Nếu không bắt được\Ncáo lúc hết sơn
Dialogue: 0,0:06:07.24,0:06:09.25,Default,,0,0,0,,thì cáo ôm trọn số tiền.
Dialogue: 0,0:06:10.22,0:06:11.49,Default,,0,0,0,,Bao nhiêu?
Dialogue: 0,0:06:11.49,0:06:13.16,Default,,0,0,0,,600 bảng.
Dialogue: 0,0:06:13.93,0:06:16.79,Default,,0,0,0,,Các anh đã có cáo.
Dialogue: 0,0:06:20.70,0:06:22.10,Default,,0,0,0,,Nghiêm túc chứ?
Dialogue: 0,0:06:22.10,0:06:23.73,Default,,0,0,0,,Em không đủ nhanh và ngơ à?
Dialogue: 0,0:06:23.73,0:06:25.40,Default,,0,0,0,,Không, ý anh là...
Dialogue: 0,0:06:27.50,0:06:28.90,Default,,0,0,0,,Em được nhận.
Dialogue: 0,0:06:28.91,0:06:30.87,Default,,0,0,0,,{\i1}"Cáo ơi chạy đi\Nngười ta rượt kìa"{\i0}
Dialogue: 0,0:06:30.87,0:06:32.91,Default,,0,0,0,,Kịch Shakespeare à?
Dialogue: 0,0:06:32.91,0:06:34.81,Default,,0,0,0,,Vở {\i1}Hamlet{\i0} đúng không?
Dialogue: 0,0:06:34.81,0:06:36.68,Default,,0,0,0,,Không biết. Nó cứ\Nở trong đầu em.
Dialogue: 0,0:06:36.68,0:06:38.35,Default,,0,0,0,,Em biết đó là {\i1}Hamlet{\i0} mà.
Dialogue: 0,0:06:38.35,0:06:39.95,Default,,0,0,0,,Hỏi em lần nữa
Dialogue: 0,0:06:39.95,0:06:42.19,Default,,0,0,0,,sao em lại làm nghề giao báo?
Dialogue: 0,0:06:42.19,0:06:43.39,Default,,0,0,0,,Vì anh đấy Bruce.
Dialogue: 0,0:06:44.82,0:06:47.09,Default,,0,0,0,,Em muốn ở gần anh.
Dialogue: 0,0:07:15.35,0:07:19.69,Default,,0,0,0,,5,4,3,2,1! Đi nào!
Dialogue: 0,0:07:29.37,0:07:30.40,Default,,0,0,0,,Chào!
Dialogue: 0,0:07:53.09,0:07:55.36,Default,,0,0,0,,Xin lỗi nhé!
Dialogue: 0,0:08:20.88,0:08:22.89,Default,,0,0,0,,Đi nào!
Dialogue: 0,0:08:25.12,0:08:27.02,Default,,0,0,0,,Con nhỏ đâu rồi?
Dialogue: 0,0:09:10.04,0:09:11.89,Default,,0,0,0,,{\i1}Bố sẽ về ngay thôi con yêu.{\i0}
Dialogue: 0,0:09:24.25,0:09:27.58,Default,,0,0,0,,- Nhìn đường đi chứ!\N- Nhìn kính hậu đi!
Dialogue: 0,0:09:35.56,0:09:37.66,Default,,0,0,0,,Chuồn lẹ!
Dialogue: 0,0:09:46.04,0:09:48.14,Default,,0,0,0,,Gặp cháu ở đây thật vui.
Dialogue: 0,0:09:49.44,0:09:50.77,Default,,0,0,0,,Ana.
Dialogue: 0,0:09:50.77,0:09:52.31,Default,,0,0,0,,Lẽ ra cô đừng đến.
Dialogue: 0,0:09:52.31,0:09:54.54,Default,,0,0,0,,Cháu không cần\Nngười giám hộ nữa.
Dialogue: 0,0:09:54.54,0:09:55.98,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:09:57.02,0:09:59.15,Default,,0,0,0,,Cháu hóa trang à?
Dialogue: 0,0:10:03.19,0:10:05.22,Default,,0,0,0,,Lâu rồi không gặp cháu.
Dialogue: 0,0:10:05.22,0:10:07.33,Default,,0,0,0,,Cô có bao giờ gặp cháu đâu.
Dialogue: 0,0:10:11.86,0:10:13.30,Default,,0,0,0,,Cháu xin lỗi.
Dialogue: 0,0:10:15.07,0:10:16.70,Default,,0,0,0,,Cảm ơn vì cô đã đến.
Dialogue: 0,0:10:17.07,0:10:18.70,Default,,0,0,0,,Có chuyện gì vậy?
Dialogue: 0,0:10:20.04,0:10:21.64,Default,,0,0,0,,Cháu cần tiền.
Dialogue: 0,0:10:21.64,0:10:24.24,Default,,0,0,0,,Thật sao? Có một\Nkhoản thừa kế
Dialogue: 0,0:10:24.24,0:10:25.94,Default,,0,0,0,,đang đợi cháu.\NChỉ cần cháu...
Dialogue: 0,0:10:25.94,0:10:27.15,Default,,0,0,0,,Cháu không muốn.
Dialogue: 0,0:10:29.25,0:10:31.32,Default,,0,0,0,,7 năm rồi Lara.
Dialogue: 0,0:10:33.55,0:10:36.59,Default,,0,0,0,,Cảnh sát Tokyo đã\Nthôi tìm cha cháu
Dialogue: 0,0:10:36.59,0:10:39.05,Default,,0,0,0,,từ 5 năm trước.
Dialogue: 0,0:10:39.06,0:10:42.63,Default,,0,0,0,,Các thám tử tư cũng\Nkhông nhận điều tra nữa.
Dialogue: 0,0:10:43.56,0:10:45.93,Default,,0,0,0,,Cô biết thật khó để chấp nhận.
Dialogue: 0,0:10:45.93,0:10:48.93,Default,,0,0,0,,Nhưng giờ cháu phải\Nđến ký giấy tờ ngay.
Dialogue: 0,0:10:48.93,0:10:51.93,Default,,0,0,0,,Hm. Thế nên cô mới\Ntới đây chứ gì?
Dialogue: 0,0:10:51.94,0:10:55.44,Default,,0,0,0,,Không. Ta tới\Nlà vì cháu.
Dialogue: 0,0:10:55.44,0:10:57.67,Default,,0,0,0,,Cháu có thể làm bất cứ điều gì
Dialogue: 0,0:10:57.67,0:10:59.77,Default,,0,0,0,,với khả năng và số tiền đó.
Dialogue: 0,0:10:59.78,0:11:02.08,Default,,0,0,0,,Tiền của ông ấy.\NKhông phải của cháu.
Dialogue: 0,0:11:05.12,0:11:07.48,Default,,0,0,0,,Nghe này, đơn giản thôi
Dialogue: 0,0:11:07.49,0:11:09.62,Default,,0,0,0,,Nếu cháu không ký vào văn tự
Dialogue: 0,0:11:09.62,0:11:13.72,Default,,0,0,0,,thì mọi công lao của\Nbố cháu sẽ bị bán sạch.
Dialogue: 0,0:11:13.72,0:11:15.59,Default,,0,0,0,,Không chỉ có công ty
Dialogue: 0,0:11:16.83,0:11:18.70,Default,,0,0,0,,mà cả dinh thự Croft nữa.
Dialogue: 0,0:11:21.50,0:11:25.38,Default,,0,0,0,,Bố cháu sẽ cảm thấy thế nào\Nnếu cháu để mất dinh thự?
Dialogue: 0,0:11:29.64,0:11:33.28,Default,,0,0,0,,Lara, bố cháu mất rồi.
Dialogue: 0,0:11:33.28,0:11:36.51,Default,,0,0,0,,Nhưng cháu có thể\Ntiếp bước ông ấy.
Dialogue: 0,0:11:37.75,0:11:39.28,Default,,0,0,0,,Nó ngấm vào máu rồi.
Dialogue: 0,0:11:44.59,0:11:45.72,Default,,0,0,0,,Cháu xin lỗi.
Dialogue: 0,0:11:47.26,0:11:50.56,Default,,0,0,0,,Người nhà Croft\Nkhông ai như cháu.
Dialogue: 0,0:12:07.81,0:12:10.81,Default,,0,0,0,,{\i1}Nhưng con không muốn bố đi.{\i0}
Dialogue: 0,0:12:10.81,0:12:12.58,Default,,0,0,0,,Bố sẽ về ngay thôi con yêu.
Dialogue: 0,0:12:14.35,0:12:16.35,Default,,0,0,0,,Con phải hiểu rằng
Dialogue: 0,0:12:16.35,0:12:20.26,Default,,0,0,0,,Người nhà Croft có những\Nnghĩa vụ và việc phải làm.
Dialogue: 0,0:12:20.26,0:12:21.96,Default,,0,0,0,,Nhưng con sẽ nhớ bố.
Dialogue: 0,0:12:21.96,0:12:24.46,Default,,0,0,0,,Bố cũng nhớ con.
Dialogue: 0,0:12:24.46,0:12:26.57,Default,,0,0,0,,Hay là thế này nhé.
Dialogue: 0,0:12:27.67,0:12:29.43,Default,,0,0,0,,Thấy nó không?
Dialogue: 0,0:12:29.43,0:12:32.27,Default,,0,0,0,,Nó từng là của mẹ con,\Nnó có sức mạnh đặc biệt.
Dialogue: 0,0:12:32.27,0:12:34.14,Default,,0,0,0,,Ý bố là sao?
Dialogue: 0,0:12:34.14,0:12:35.90,Default,,0,0,0,,Nếu con muốn ở bên ai
Dialogue: 0,0:12:35.91,0:12:38.51,Default,,0,0,0,,chỉ cần nắm chặt nó trong tay
Dialogue: 0,0:12:38.51,0:12:41.71,Default,,0,0,0,,và nghĩ về người đó,\Nhọ sẽ biết ngay.
Dialogue: 0,0:12:41.71,0:12:43.38,Default,,0,0,0,,- Thật sao?\N- Ừ.
Dialogue: 0,0:12:44.25,0:12:45.95,Default,,0,0,0,,Phép thuật đấy.
Dialogue: 0,0:12:45.95,0:12:48.05,Default,,0,0,0,,Như vậy chúng ta\Nsẽ luôn bên nhau
